{
  "compilerOptions": {
      "target": "ESNext",
      "module": "commonjs",
      "rootDir": "./src/",
      "outDir": "./dist/",
      "allowJs": true,
      "strict": true,
      "moduleResolution": "node",
      "importHelpers": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "removeComments": true,
      "typeRoots": [
          "node_modules/@types"
      ],
      "sourceMap": false,
      "baseUrl": "./"
  },
  "include": [
      "./src"
  ],
  "exclude": [
      "node_modules",
      "dist"
  ],
}